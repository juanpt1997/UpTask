doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src='https://kit.fontawesome.com/e4f3a7a551.js' crossorigin='anonymous')
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="/css/app.css")
        //- title Document
        //- title= nombrePagina
        title #{nombrePagina}
    body 
        header.barra
            h1 UpTask - Administrador de proyectos 
            //- #{year}
            a(href="#") Cerrar Sesi√≥n

        main.contenedor
            aside.contenedor-proyectos
        
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton") Nuevo Proyecto
                        span +
                .panel.lista-proyectos 
                    h2 Proyectos
                    ul#proyectos.proyectos
                        if (proyectos)
                            each proyecto in proyectos 
                                li
                                    a(href=`/proyectos/${proyecto.url}`) #{proyecto.nombre}
            block contenido

            //- pre #{vardump(proyectos)}
        
        script(src="/dist/bundle.js")